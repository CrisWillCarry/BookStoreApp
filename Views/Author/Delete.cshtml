@model BookStoreApp.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<h2>Delete Author</h2>

<h3>Are you sure you want to delete this author and all associated books?</h3>
<div>
    <h4>Author:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-controller="Author" asp-route-id="@Model.AuthorId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>