@model ChangePasswordViewModel

<h2>Change Password</h2>

<form method="post" asp-action="ChangePassword">
    <div class="form-group row">
        <label class="col-form-label col-md-2">Username:</label>
        <div class="col-md-4">
            <input type="text" asp-for="Username" class="form-control" readonly />
            
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-md-2">Old Password:</label>
        <div class="col-md-4">
            <input asp-for="OldPassword" type="password" class="form-control" />
            <!-- Input field for old password -->
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-md-2">New Password:</label>
        <div class="col-md-4">
            <input asp-for="NewPassword" type="password" class="form-control" />
            <!-- Input field for new password -->
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-md-2">Confirm New Password:</label>
        <div class="col-md-4">
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <!-- Input field to confirm new password -->
        </div>
    </div>

    <div class="form-group row">
        <div class="col offset-md-2">
            <button type="submit" class="btn btn-primary">Change Password</button>
            
            <a asp-action="Index" asp-controller="User" class="btn btn-primary">Cancel</a>
            
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6 offset-md-2">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
        </div>
    </div>
</form>
