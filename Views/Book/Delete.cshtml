@model Book
@{
    ViewData["Title"] = "Delete Book";
}

<style>
    /* Centering the content */
    .centered-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 20vh; /* Adjust as needed */
        text-align: center;
    }
</style>

<div class="centered-content">
    <h1>Delete Book?</h1>
    <h2>Are you sure you want to delete this book?</h2>
    <h3>@Model.Title</h3>

    <form asp-controller="Book" asp-action="DeleteConfirmed" asp-route-id="@Model.ISBN" method="post">
        <button type="submit" class="btn btn-danger">
            Confirm Delete
        </button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>